generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  firstName      String?
  lastName       String?
  heightCm       Float?
  heightUnit     String?
  weightKg       Float?
  weightUnit     String?
  passwordHash   String
  mfaEnabled     Boolean         @default(false)
  mfaSecret      String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  trustedDevices TrustedDevice[]
  meals          Meal[]
  dailyTotals    DailyTotal[]
}

model TrustedDevice {
  id          String   @id @default(uuid())
  deviceToken String   @unique
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
  lastUsedAt  DateTime @default(now())
}

model Meal {
  id         String    @id @default(uuid())
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  mealType   String
  consumedAt DateTime
  text       String
  createdAt  DateTime  @default(now())
  items      MealItem[]
}

model MealItem {
  id        String   @id @default(uuid())
  meal      Meal     @relation(fields: [mealId], references: [id])
  mealId    String
  foodId    String
  name      String
  quantity  Float
  unit      String
  grams     Float
  calories  Float
  protein_g Float
  carbs_g   Float
  fat_g     Float
  source    String
}

model DailyTotal {
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  date      DateTime
  calories  Float
  protein_g Float
  carbs_g   Float
  fat_g     Float

  @@id([userId, date])
}
